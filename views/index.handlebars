<h1>Burgers!</h1>

<h2>Fresh Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="Devour">Eat?</label><br>
    <input type="radio" name="devour" value="1" checked> Sleepy!<br>
    <input type="radio" name="devour" value="0"> Awake
  </div>

  <button type="submit">Add a Burger</button>
</form>
